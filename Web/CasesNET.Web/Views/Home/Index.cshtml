@using CasesNET.Common
@using CasesNET.Web.ViewModels.Home
@model IndexViewModel;
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="container carousel-container mt-4">
    <div id="carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Images/slide-2.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/slide-2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/slide-2.jpg" alt="Third slide">
            </div>


            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>
</div>

    @await Html.PartialAsync("../Shared/_SubmenuPartial.cshtml")

<div class="category-selection-wrapper container">
    <h1 class="text-center mt-4 text-uppercase">most-sold categories</h1>
    <div class="row">
        @foreach (var category in Model.MostSoldCategories)
        {
            <div class="col-6 col-md-6 col-lg-4 col-xl-3 text-center p-0">
                <div class="card">
                    <a asp-area="" asp-controller="Category" asp-action="All" asp-route-id="@category.Id">
                        <img class="card-img-top" src="~/Images/@category.ImageUrl" alt="Card image">
                    </a>
                    <div class="card-body">
                        <a asp-area="" asp-controller="Category" asp-action="All" asp-route-id="@category.Id">
                            <p class="card-text text-uppercase text-weight">@category.Name</p>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div class="bestsellers-wrapper mt-4 container">
    <h1 class="text-center text-uppercase text-weight mt-4">our bestsellers</h1>
    <div class="row">
        @foreach (var phoneCase in Model.BestSellersCases)
        {
           @await Html.PartialAsync("../Shared/_CasePartial.cshtml",phoneCase)
        }
    </div>
</div>
