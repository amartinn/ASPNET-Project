@using  CasesNET.Web.ViewModels.Cases
@using System.Linq
@using System.Collections.Generic
@model CasesByManufacturerViewModel
@{ 
    this.ViewData["title"] = Model.ManufacturerName;
}
@if (Model.CasesCount > 0 )
{

    <div class="cases-selection-wrapper container">
        <h1 class="text-center m-5 text-uppercase">@Model.ManufacturerName</h1>
        <div class="row ">
            @foreach (var phoneCase in Model.Cases)
            {

                @await Html.PartialAsync("../Shared/_CasePartial.cshtml", phoneCase)

            }
        </div>
    </div>
    <partial name="_PagingPartial" model="@Model" />
}
else
{
    <h1 class="text-uppercase text-center">Currently There are no Cases by <span class="text-danger">@Model.ManufacturerName</span></h1>
    <a class="hoverable text-center" asp-area="" asp-controller="Cases" asp-action="Latest">You can continue shopping by clicking here!</a>

}
<style>
    .cases-selection-wrapper {
        margin-top: 200px;
    }
</style>
