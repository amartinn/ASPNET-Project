@using CasesNET.Web.ViewModels.Shared
@model CaseViewModel  



<div class="col-12 col-md-6 col-lg-4 col-xl-3 text-center">
    <div class="card card-case">
        <a class="img-fluid" href="@Model.Url?caseId=@Model.Id"><img class="card-img-top m-auto" src="~/Images/Cases/@Model.ImageUrl" alt="@Model.ImageUrl"></a>
        <div class="card-body">
            <h2 class="text-lowercase font-size-medium">@Model.Name</h2>
            <h2 class="card-title text-uppercase font-size-small">@Model.ManufacturerName</h2>
            <h6 class="card-title text-uppercase font-size-small">@Model.DeviceName</h6>
            <p class="card-text ">$@Model.Price</p>
            <form method="Post" asp-area="Api" asp-controller="Cart" asp-action="addItem" asp-route-id="@Model.Id" class="form shopping-cart-form">
                <button type="submit" class="hoverable btn btn-utility add-to-cart-btn text-uppercase"><i class="hoverable fas fa-shopping-cart"></i>Add To Cart</button>
            </form>
        </div>
    </div>
</div>

<style>
    .font-size-small{
        font-size :1em;
    }
    .font-size-medium{
        font-size: 1.3em;
    }
</style>