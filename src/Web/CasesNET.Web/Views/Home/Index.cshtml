@using CasesNET.Web.ViewModels.Home
@model IndexViewModel;
@{
    this.ViewData["Title"] = "Home";
}

<div class="container carousel-container">
    <div id="carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 img-fluid carousel-img" src="~/Images/caurosel-slide-1.jpg" alt="Phone Cases">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 img-fluid carousel-img" src="~/Images/slide-2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 img-fluid carousel-img" src="~/Images/slide-2.jpg" alt="Third slide">
            </div>


            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>
</div>


<div class="category-selection-wrapper container">
    <h1 class="text-center mt-4 text-uppercase">most-sold categories</h1>
    <div class="row">
        @foreach (var category in Model.MostSoldCategories)
        {

            @await Html.PartialAsync("../Shared/_CategoryPartial.cshtml",category)

        }
    </div>
</div>
