@using CasesNET.Web.ViewModels.Categories;
@model CategoryListingModel
@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<p>
    <a class="hoverable" asp-action="Create">Create New</a>
</p>
<table id="table" class="table table-striped">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Image
            </th>
            <th>
                Utilities
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img width="50" height="50" src="~/Images/Categories/@item.ImageUrl" alt="@item.ImageUrl" />
                </td>
                <td>
                    <a class="hoverable" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="hoverable" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>