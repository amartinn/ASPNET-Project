@model CasesNET.Web.ViewModels.Administration.Orders.OrderListingViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Orders</h1>

<table id="table" class="table table-striped">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Created On
            </th>
            <th>
                Status
            </th>
            <th> Utilities</th>
        </tr>
    </thead>
    <tbody>
@foreach (var order in Model.Orders) {
        <tr>
            <td>
                @order.Id
            </td>
            <td>
                @order.CreatedOn
            </td>
            <td>
                @order.OrderStatus
            </td>
            <td>
                <a class="hoverable" asp-action="Edit" asp-route-id="@order.Id">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
